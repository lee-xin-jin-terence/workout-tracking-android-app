<?xml version="1.0" encoding="utf-8"?>

<!--
    Filename: activity_map_and_image_slideshow_wrapper.xml
    Purpose: Contains the layout for MapAndImageSlideshowWrapper.java
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.activities.MapAndImageSlideshowWrapperActivity"
    android:id="@+id/rootView">

  <androidx.fragment.app.FragmentContainerView
      android:id="@+id/mapAndImageSlideshowFragmentContainerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <LinearLayout
      android:id="@+id/closeButtonContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintTop_toTopOf="@+id/rootView"
      android:gravity="end">

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:backgroundTint="@null"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/x_with_circle_icon"
        android:contentDescription="@null" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>